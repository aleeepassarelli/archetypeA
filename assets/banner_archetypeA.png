<?xml version="1.0" encoding="utf-8"?>
<!--
  banner_archetypeA.svg
  - 1280x360 - "Fosco translúcido sobre fundo claro"
  - Título: ARQUÉTIPO A — Estética Operacional
  - Subtítulo: Φ³ — Causalidade Estrutural
  - Inclui selo pequeno: v1.1 • CC-BY-SA
  - Comentários inclusos para facilitar edição
-->
<svg xmlns="http://www.w3.org/2000/svg"
     width="1280" height="360" viewBox="0 0 1280 360" role="img" aria-label="ARQUÉTIPO A — Estética Operacional">
  <title>ARQUÉTIPO A — Estética Operacional · Φ³ — Causalidade Estrutural</title>

  <defs>
    <!-- fundo blur (não aplicável em todos os renderizadores, mas seguro em GitHub) -->
    <filter id="dropSoft" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur stdDeviation="10" result="blur"/>
      <feMerge>
        <feMergeNode in="blur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>

    <!-- gradiente do painel (fosco translúcido) -->
    <linearGradient id="panelGrad" x1="0" x2="1">
      <stop offset="0%" stop-color="#ffffff" stop-opacity="0.85"/>
      <stop offset="100%" stop-color="#f3f7f9" stop-opacity="0.72"/>
    </linearGradient>

    <!-- sutil tonalidade para a lâmina vetorial -->
    <linearGradient id="bladeGrad" x1="0" x2="1">
      <stop offset="0%" stop-color="#00d9ff" stop-opacity="0.92"/>
      <stop offset="100%" stop-color="#00838f" stop-opacity="0.78"/>
    </linearGradient>

    <!-- brilho interno -->
    <radialGradient id="innerShine" cx="30%" cy="30%" r="60%">
      <stop offset="0%" stop-color="#ffffff" stop-opacity="0.35"/>
      <stop offset="100%" stop-color="#ffffff" stop-opacity="0"/>
    </radialGradient>

    <!-- selo badge gradient -->
    <linearGradient id="badgeGrad" x1="0" x2="1">
      <stop offset="0%" stop-color="#0ea5a4"/>
      <stop offset="100%" stop-color="#06b6d4"/>
    </linearGradient>

    <!-- fonte fallback family inlined semantics (use system fonts) -->
    <style type="text/css"><![CDATA[
      .panel { rx:20; ry:20; fill: url(#panelGrad); stroke: rgba(16,24,32,0.06); stroke-width:1; }
      .glass { fill: rgba(255,255,255,0.06); }
      .blade { fill: url(#bladeGrad); opacity:0.95; stroke: rgba(0,0,0,0.06); stroke-width:0.6; }
      .title { font-family: Inter, "Segoe UI", system-ui, -apple-system, "Helvetica Neue", Arial; font-weight:800; font-size:46px; fill:#0b1220; }
      .accent { fill:#00c7ff; }
      .subtitle { font-family: Inter, "Segoe UI", system-ui; font-weight:500; font-size:18px; fill:#334155; }
      .meta { font-family: Inter, "Segoe UI", system-ui; font-size:12px; fill:#0b1220; opacity:0.9; }
      .badgeText { font-family: Inter, "Segoe UI", system-ui; font-weight:600; font-size:12px; fill:white; }
    ]]></style>
  </defs>

  <!-- Painel fosco central -->
  <g transform="translate(40,28)">
    <!-- sombra externa -->
    <rect x="0" y="0" width="1200" height="304" rx="20" fill="#0b1220" opacity="0.04" filter="url(#dropSoft)"/>
    <!-- painel translúcido (sob fundo claro) -->
    <rect class="panel" x="0" y="0" width="1200" height="304" rx="20" />
    <!-- brilho interno -->
    <rect x="0" y="0" width="1200" height="304" rx="20" fill="url(#innerShine)" opacity="0.12"/>

    <!-- Lâmina / forma vetorial à esquerda -->
    <g transform="translate(70,48) rotate(-18)">
      <!-- base translúcida -->
      <rect x="0" y="0" width="420" height="72" rx="8" class="blade" opacity="0.82" />
      <!-- recorte de brilho diagonal -->
      <polygon points="12,8 400,8 380,56 8,64" fill="white" opacity="0.06"/>
      <!-- linha fina de corte -->
      <line x1="20" y1="16" x2="392" y2="56" stroke="rgba(255,255,255,0.25)" stroke-width="1" opacity="0.65"/>
      <!-- detalhe interior translúcido -->
      <rect x="40" y="10" width="340" height="10" rx="4" fill="rgba(255,255,255,0.06)"/>
    </g>

    <!-- Texto: título e subtítulo (alinhamento central-vertical) -->
    <g transform="translate(540,100)" text-anchor="middle">
      <text class="title" x="0" y="-6">ARQUÉTIPO <tspan class="accent">A</tspan> — Estética Operacional</text>
      <text class="subtitle" x="0" y="30">Φ³ — Causalidade Estrutural</text>
    </g>

    <!-- Selo pequeno no canto direito (v1.1 • CC-BY-SA) -->
    <g transform="translate(1080,18)" aria-hidden="true">
      <!-- badge background -->
      <rect x="0" y="0" width="120" height="32" rx="8" fill="url(#badgeGrad)" />
      <!-- icon pequeno -->
      <circle cx="20" cy="16" r="9" fill="rgba(255,255,255,0.12)"/>
      <path d="M16 13 L22 19 M22 13 L16 19" stroke="white" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" opacity="0.92"/>
      <!-- texts -->
      <text class="badgeText" x="38" y="20">v1.1 • CC-BY-SA</text>
    </g>

    <!-- Legenda discreta inferior esquerda -->
    <g transform="translate(36,242)">
      <rect x="0" y="0" width="380" height="44" rx="8" fill="rgba(11,18,32,0.02)"/>
      <text class="meta" x="14" y="18">Aledev · 2025 · Estética Operacional · README v1.1</text>
    </g>
  </g>
</svg>
